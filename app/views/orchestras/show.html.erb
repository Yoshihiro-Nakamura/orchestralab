
<div class="concertwrapper" style="padding-top: 40px;">
<% @concerts.each do |concert|%>

<div class="col-sm-6 col-md-3" style="margin-top: 10px;">
    <div class="thumbnail" style="position: relative; height: 400px;">
      <img src="<%= asset_path "orchestra.jpg" %>" alt="...">
      <span style="position: absolute; top: 15px; left: 10px; width: 40px; background: rgba(33, 33, 44, 0.7); color: #fff;"><%= concert.datetime.strftime('%m/%d') %></span>
      <div class="caption">
        <h4 style="height: 40px; overflow:hidden;"><%= concert.title %></h4>
        <div class="concertinfo" style="height: 100px; overflow:scroll;" >
          <p>指揮：<%= concert.conductor.cond_name %></p>
          <% concert.artists.each do |artist|%>
            <li><%= artist.artist_name %></li>
          <% end %>
          <p><%= concert.content %></p>
        </div>
        <p><a href="/concerts/<%= concert.id %>" class="btn btn-primary" role="button">詳細</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
      </div>
    </div>
  </div>

<% end %>
</div>